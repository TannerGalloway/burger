{{!-- html body layout --}}
<div class="container">
    <img class="center" src="/assets/img/burger.png">
    <h2>Eat-Da-Burger!</h2>
    <div class="row">
        <div id="left" class="col-7">
            <h4>Ready to be Devoured!</h4>
            <ul>
                {{!-- loop over retruned array put into template particals --}}
                {{#each notDevoured}}
                {{>burger-list-left}}
                {{/each}}
            </ul>
        </div>
        <div id="right" class="col">
            <h4>Devoured!</h4>
            <ul>
                {{#each devoured}}
                {{>burger-list-right}}
                {{/each}}
            </ul>
        </div>
    </div>
    <form class="add-burger">
        <textarea class="center" id="text" rows="4" cols="40"></textarea>
        <p>Enter the name of the burger you would like to Devour!</p>
        <button type="submit" class="center" id="submit">Order Burger</button>
    </form>
</div>